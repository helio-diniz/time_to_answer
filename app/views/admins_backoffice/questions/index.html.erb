<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= t('messages.listing', model: @questions.model_name.human(count: 2)) %></h1>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover" id="dataTable" style="width: 100%;" width="100%" cellspacing="0">
    <thead>
      <tr>
        <th>#</th>
        <th><%= translate_attribute(@questions, :description) %></th>
        <th><%= translate_attribute(@questions, :subject) %></th>
        <th> 
          <%= link_to new_admins_backoffice_question_path, class: "btn btn-success btn-circle btn-sm" do %>
                <i class="fa fa-plus"></i>
          <% end %>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question| %>
        <tr>
            <td><%= question.id %></td>
            <td><%= question.description.truncate(70) %></td>
            <td><%= question.subject.description.truncate(30) %> </td>
            <td style="width: 100px"> 
              <%= link_to edit_admins_backoffice_question_path(question), class: "btn btn-info btn-circle btn-sm" do %>
                <i class="fas fa-edit"></i>
              <% end %>
              <%= link_to admins_backoffice_question_path(question), method: :delete, 
                class: "btn btn-danger btn-circle btn-sm", 
                data: { confirm: t('messages.confirm_with', item: question.description.truncate(15))}  do %>
                <i class="fas fa-trash"></i>>
              <% end %>
            </td>
        </tr>
      <% end %>  
    </tbody>
  </table>
</div>
<div class="cointainer">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= paginate @questions %>
    </div>   
  </div>
</div>  